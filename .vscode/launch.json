    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch - Local",
            "program": "${workspaceFolder}/app.js",
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch - Preview",
            "program": "${workspaceFolder}/app.js",
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "preview"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch - Production",
            "program": "${workspaceFolder}/app.js",
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "production"
            }
        }
    ]
}